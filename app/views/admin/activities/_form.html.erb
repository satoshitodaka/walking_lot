<%= form_with model: [:admin, activity] do |f| %>
  <%= render 'shared/error_messages', object: activity %>

  <div class="form-control w-full mb-5 mx-auto">
    <%= f.label :location_type, class: 'label' %>
    <div class="flex flex-wrap gap-5">
      <%= f.collection_check_boxes :location_type_ids, LocationType.all, :id, :name do |b| %>
        <%= b.label class: 'label cursor-pointer justify-start gap-3' do %>
          <%= b.check_box class: 'checkbox' %>
          <span><%= b.text %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="form-control w-full mb-5 mx-auto">
    <%= f.label :content, class: 'label' %>
    <%= f.text_field :content, class: 'input input-bordered w-full' %>
  </div>

  <div class="form-control">
    <label class="label cursor-pointer">
      <span class="label-text">承認する</span> 
      <%= f.check_box :approved, {class: 'checkbox'}, "approved", "unapproved" %>
    </label>
  </div>

    <div class="form-control">
    <label class="label cursor-pointer">
      <span class="label-text">公開する</span> 
      <%= f.check_box :released, {class: 'checkbox'}, "released", "unreleased" %>
    </label>
  </div>
  <div class="pb-12">
    <%= f.submit class: 'btn btn-primary btn-block'  %>
  </div>
<% end %>
