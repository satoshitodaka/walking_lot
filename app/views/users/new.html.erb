<% set_meta_tags title: 'ユーザー登録' %>
<div class="container mx-auto px-4 py-10 max-w-lg">
  <p class="text-2xl font-bold">ユーザー登録</p></p>
  <%= render 'form', user: @user %>
  <hr class="mb-5">

  <div class="mb-5">
    <%= link_to auth_at_provider_path(provider: :twitter), class: 'btn bg-twitter btn-block border-twitter' do %>
    <%= render 'shared/svg_icons/twitter' %>
    <span class="normal-case" style="color: white;">Twitterでユーザー登録する</span>
    <% end %>
  </div>

  <div class="mb-5">
    <%= link_to auth_at_provider_path(provider: :line), class: 'btn bg-line btn-block border-line' do %>
    <%= render 'shared/svg_icons/line' %>
    <span class="normal-case px-2" style="color: white;">LINEでユーザー登録する</span>
    <% end %>
  </div>
</div>
