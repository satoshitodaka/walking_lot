<%= form_with model: [:mypage, activity] do |f| %>
  <%= render 'shared/error_messages', object: activity %>

  <div class="form-control w-full max-w-xs mb-5">
    <%= f.label :location_types, class: 'label' %>
    <div class="flex flex-wrap gap-5">
      <%= f.collection_check_boxes :location_type_ids, LocationType.all, :id, :name do |b| %>
        <%= b.label class: 'label cursor-pointer justify-start gap-3' do %>
          <%= b.check_box class: 'checkbox' %>
          <span><%= b.text %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="form-control">
    <%= f.label :content, class: 'label' %>
    <%= f.text_field :content, class: 'input input-bordered w-full max-w-xs' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>