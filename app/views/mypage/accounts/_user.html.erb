<div class="grid grid-cols-3">
  <div class="col-span-2">
    <div class="flex">
      <div class="avatar">
        <div class="w-14 rounded-full mb-5">
          <%= image_tag @user.avatar %>
        </div>
      </div>
      <div class="text-left mx-3">
        <p class="text-2xl font-bold mb-1"><%= @user.name %></p>
        <h4>引いたくじの数<%= @user.lots.count %>回</h4>
      </div>
    </div>
  </div>
  <div class="text-right">
    <%= link_to '編集', edit_mypage_account_path, class: 'btn btn-primary btn-sm' %>
    <%= link_to '退会', mypage_account_path, class: 'btn btn-error btn-sm', data: { turbo_method: :delete, turbo_confirm: '退会しますか？' } %>
  </div>
</div>
