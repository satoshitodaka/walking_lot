<%= form_with model: user, url: mypage_account_path do |f| %>
    <%= render 'shared/error_messages', object: @user %>
    <div class="avatar">
      <div class="w-24 rounded-full">
        <%= image_tag user.avatar, alt: user.name %>
      </div>
    </div>
    <div class="form-control w-full mb-5">
      <%= f.label :avatar, class: 'label' %>
      <%= f.file_field :avatar, class: 'file-input file-input-bordered w-full' %>
    </div>
    <div class="form-control w-full mb-5">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input input-bordered input-primary w-full' %>
    </div>
      <div class="form-control w-full mb-5">
      <%= f.label :email, class: 'label' %>
      <%= f.text_field :email, class: 'input input-bordered input-primary w-full' %>
    </div>
    <div class="form-control w-full mb-5">
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: 'input input-bordered input-primary w-full' %>
    </div>
    <div class="form-control w-full mb-5">
      <%= f.label :password_confirmation, class: 'label' %>
      <%= f.password_field :password_confirmation, class: 'input input-bordered input-primary w-full' %>
    </div>
    <div class="pb-12">
      <%= f.submit class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
