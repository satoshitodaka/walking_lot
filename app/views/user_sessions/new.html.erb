<% set_meta_tags title: 'ログイン' %>
<div class="container mx-auto px-4 py-10 max-w-lg">
  <p class="text-2xl font-bold mb-5">ログイン</p>
  <div class='mx-auto max-w-lg mb-5'>
    <%= form_with url: login_path, id: 'login-form' do |f| %>
      <div class="form-control w-full mb-5">
        <%= f.label :email, User.human_attribute_name(:email), class: 'label' %>
        <%= f.text_field :email, class: 'input input-bordered input-primary w-full' %>
      </div>
      <div class="form-control w-full mb-5">
        <%= f.label :password, User.human_attribute_name(:password), class: 'label' %>
        <%= f.password_field :password, class: 'input input-bordered input-primary w-full' %>
      </div>
      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
      <div class="my-5 text-right">
        <%= link_to '新規登録はこちら', signup_path, class: 'link link-info' %>
      </div>
    <% end %>

    <hr class="mb-5">

    <div class="mb-5">
      <%= link_to auth_at_provider_path(:provider => :twitter), class: 'btn bg-twitter btn-block border-twitter' do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="fill-current mr-1">
          <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" fill="#ffffff"></path>
      </svg>
      <span class="normal-case" style="color: white;">Twitterでログインする</span>
      <% end %>
    </div>

    <div class="mb-5">
      <%= link_to auth_at_provider_path(:provider => :line), class: 'btn bg-line btn-block border-line' do %>
      <%= image_tag 'line_icon', size: '40x40' %>
      <span class="normal-case" style="color: white;">LINEでログインする</span>
      <% end %>
    </div>
  </div>
</div>
